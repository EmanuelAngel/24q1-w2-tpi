mixin cartCardOffer(product)
  li(data-product-id=`${product.id}` class="flex items-center gap-4")
    img(
      src=`${product.image}`
      alt=""
      class="size-16 rounded object-cover"
    )

    div(class="font-regular")
      h3(class="font-medium text-neutral-900 dark:text-neutral-100") #{product.title}

      dl(class="mt-0.5 space-y-px text-[10px] text-neutral-600 dark:text-neutral-400")
        div(class="flex items-center gap-1")
          dt(class="text-neutral-500") Precio: 
          dd(class="text-sm text-neutral-600") $#{product.price}
          if product.offer.discount > 50
            span(class="text-orange-200 bg-orange-500 font-medium dark:text-orange-800 dark:bg-orange-600 rounded-full py-0.5 text-xs")
              include ../../icons/flame.pug
          else 
            span(class="text-orange-500 bg-orange-200 font-medium dark:text-orange-600 dark:bg-orange-800 rounded-full py-0.5 text-xs")
              include ../../icons/flame.pug

        div
          dt(class="inline text-neutral-500") Categoría: 
          dd(class="inline text-sm text-neutral-600") #{product.category}

    div(class="flex flex-1 items-center justify-end gap-4 flex-col xs:gap-2 xs:flex-row")
      form
        label(for="Line1Qty" class="sr-only") Cantidad

        input(
          type="number"
          min="1"
          max="20"
          value="1"
          id="Line1Qty"
          class="h-8 w-12 rounded border-neutral-200 bg-neutral-50 p-0 text-center text-xs text-neutral-600 dark:text-neutral-400 dark:border-neutral-600 dark:bg-neutral-900 [-moz-appearance:_textfield] focus:outline-none [&::-webkit-inner-spin-button]:m-0 [&::-webkit-inner-spin-button]:appearance-none [&::-webkit-outer-spin-button]:m-0 [&::-webkit-outer-spin-button]:appearance-none"
        )

      button(data-product-id-delete=`${product.id}` class="text-neutral-600 transition hover:text-red-600 dark:text-neutral-400")
        span(class="sr-only") Eliminar artículo

        svg(
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="h-6 w-6"
        )
          path(
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0"
          )