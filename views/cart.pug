extends layouts/baseLayout.pug

block content
  section
    div(class="mx-auto max-w-screen-xl px-4 py-8 sm:px-6 sm:py-12 lg:px-8")
      div(class="mx-auto max-w-3xl")
        header
          h1(class="text-xl font-bold text-neutral-900 dark:text-neutral-100 sm:text-3xl") Tu carrito

        div(class="mt-8")
          ul(class="space-y-4")
            li(class="flex items-center gap-4")
              img(
                src="https://images.unsplash.com/photo-1618354691373-d851c5c3a990?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=830&q=80"
                alt=""
                class="size-16 rounded object-cover"
              )

              div
                h3(class="text-sm text-neutral-900 dark:text-neutral-100") Basic Tee 6-Pack

                dl(class="mt-0.5 space-y-px text-[10px] text-neutral-600 dark:text-neutral-400")
                  div
                    dt(class="inline") Size:
                    dd(class="inline") XXS

                  div
                    dt(class="inline") Color:
                    dd(class="inline") White

              div(class="flex flex-1 items-center justify-end gap-2")
                form
                  label(for="Line1Qty" class="sr-only") Quantity

                  input(
                    type="number"
                    min="1"
                    value="1"
                    id="Line1Qty"
                    class="h-8 w-12 rounded border-neutral-200 bg-neutral-50 p-0 text-center text-xs text-neutral-600 dark:text-neutral-400 dark:border-neutral-600 dark:bg-neutral-900 [-moz-appearance:_textfield] focus:outline-none [&::-webkit-inner-spin-button]:m-0 [&::-webkit-inner-spin-button]:appearance-none [&::-webkit-outer-spin-button]:m-0 [&::-webkit-outer-spin-button]:appearance-none"
                  )

                button(class="text-neutral-600 transition hover:text-red-600 dark:text-neutral-400")
                  span(class="sr-only") Remove item

                  svg(
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke-width="1.5"
                    stroke="currentColor"
                    class="h-4 w-4"
                  )
                    path(
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0"
                    )

          div(class="mt-8 flex justify-end border-t border-neutral-100 pt-8 dark:border-neutral-800")
            div(class="w-screen max-w-lg space-y-4")
              dl(class="space-y-0.5 text-sm text-neutral-700 dark:text-neutral-400")
                div(class="flex justify-between!")
                  dt Subtotal: &nbsp;
                  dd $150

                div(class="flex justify-between!")
                  dt VAT: &nbsp;
                  dd $20

                div(class="flex justify-between!")
                  dt Descuentos: &nbsp;
                  dd -$30

                div(class="flex justify-between! text-base font-medium")
                  dt Total: &nbsp;
                  dd $140

              div(class="space-y-4 text-right")
                p(class="text-sm text-neutral-500 dark:text-neutral-400") <strong>2</strong> descuentos aplicados

                button(class="block w-full rounded font-bold bg-black p-2.5 text-sm text-white transition hover:bg-neutral-600 dark:bg-white dark:text-neutral-900 dark:hover:bg-neutral-200") Pagar
